# Server
PORT=3001
NODE_ENV=development

# Hedera EVM RPC
RPC_URL=https://testnet.hashio.io/api
CHAIN_ID=296

# Network selection (matches networks in ../contracts/contract-config.json)
# e.g., hederaTestnet, polygon, base, midnightTestnet
NETWORK=hederaTestnet

# Contracts config
CONTRACTS_CONFIG_PATH=../contracts/contract-config.json
# Optional overrides
# ESCROW_ADDRESS=0x...
# VC_REGISTRY_ADDRESS=0x...
# VERIFIER_MARKETPLACE_ADDRESS=0x...

# Auth
AUTH_BYPASS=true
# CLERK_JWKS_URL=https://YOUR-CLERK-DOMAIN/.well-known/jwks.json

# Server signer (for custodial flow and ORACLE/ISSUER actions)
# SERVER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
ESCROW_MODE=noncustodial
ENABLE_WORKER=false

# Storage
STORAGE_PROVIDER=local

# Seed data
# DEFAULT_VERIFIER_ADDRESS=0x...