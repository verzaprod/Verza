{
  "name": "verza-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Verza VC Registry",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:base": "hardhat run scripts/deploy.js --network base",
    "deploy:hedera": "hardhat run scripts/deploy.js --network hederaTestnet",
    "deploy:midnight": "hardhat run scripts/deploy.js --network midnightTestnet",
    "verify": "hardhat verify",
    "node": "hardhat node",
    "generate-bindings": "abigen --abi ./artifacts/contracts/VCRegistry.sol/VCRegistry.json --pkg contracts --out ../pkg/contracts/vcregistry.go"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
