{
  "name": "midnightcontract",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "compile": "node --loader ts-node/esm ./scripts/compile.ts",
    "deploy": "node --loader ts-node/esm ./scripts/deploy.ts",
    "test": "jest --coverage",
    "gas:analyze": "node --loader ts-node/esm ./scripts/gas-analysis.ts"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.12"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "collectCoverageFrom": [
      "<rootDir>/scripts/**/*.ts",
      "<rootDir>/interfaces/**/*.ts"
    ]
  }
}

